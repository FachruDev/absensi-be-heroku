generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  role       String
  qrcode     String       @unique @default(uuid())
  classId    Int?
  class      Class?       @relation(fields: [classId], references: [id])
  attendance Attendance[]
  grades     Grade[]
  teacher    Teacher?
}

model Teacher {
  id       Int       @id @default(autoincrement())
  userId   Int       @unique
  user     User      @relation(fields: [userId], references: [id])
  subjects Subject[] @relation("TeacherSubjects")
  grades   Grade[]
}

model Subject {
  id       Int       @id @default(autoincrement())
  name     String
  grades   Grade[]
  teachers Teacher[] @relation("TeacherSubjects")
}

model Grade {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  subject    Subject   @relation(fields: [subjectId], references: [id])
  subjectId  Int
  semester   String
  teacher    Teacher   @relation(fields: [teacherId], references: [id])
  teacherId  Int
  score      Float
  remarks    String?
}

model Class {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model Attendance {
  id     Int      @id @default(autoincrement())
  user   User     @relation(fields: [userId], references: [id])
  userId Int
  date   DateTime
  time   DateTime
  method String
  status String
  class  String
}
